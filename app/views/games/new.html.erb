<html>
  <head>
  </head>

  <body>
    <div class="wrapper d-flex flex-column justify-content-center align-items-center">
      <div class="card my-3 w-50 p-3 bg-secondary bg-opacity-25">
        <h1>New Game</h1>
        <ul>
          <% @letters.each do |letter| %>
            <li><%= letter %></li>
          <% end %>
        </ul>
      </div>

      <div class="card my-3 w-50 p-3 bg-secondary bg-opacity-25">
        <form action="score" method="post" data-turbo="false">
          <label for="answer" class="form-label mb-3">What is the longest word you can find?</label>
          <input id="answer" type="text" name="word" class="form-control mb-3">
          <input type="submit" value="Play" class="btn btn-primary">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <%= hidden_field_tag 'letters', @letters %>
        </form>
      </div>
    </div>

  </body>
</html>
